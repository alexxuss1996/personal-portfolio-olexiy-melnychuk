---
import ContactForm from "@components/ContactForm.astro";
import Circle from "@components/Circle.astro";
import Socials from "@components/Socials.astro";
---

<section id="contact" class="py-24 relative bg-linen overflow-hidden">
  <div class="container max-w-desktop lg:px-32 md:px-16 px-4 relative z-30">
    <h2 class="text-2xl font-bold mb-12 uppercase text-center">Contact Me</h2>
    <ContactForm />
    <Socials />
  </div>
  <Circle
    diameter={252}
    className="absolute top-0 translate-y-[450px] -translate-x-1/2 right-0 z-10"
    color="#8E7DBE"
    opacity={0.08}
  />
  <Circle
    diameter={42}
    className="absolute top-0 translate-y-[250px] translate-x-[120px] left-0 z-10"
    color="#F2646A"
    opacity={0.1}
  />
  <Circle
    diameter={72}
    className="absolute bottom-0 -translate-y-[250px] translate-x-[150px] left-0 z-10"
    color="#FC8936"
    opacity={0.1}
  />
</section>
