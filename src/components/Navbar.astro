<nav class="px-4 lg:px-8 font-bold">
  <ul class="flex justify-normal gap-5 md:gap-12 lg:gap-20">
    <li>
      <a href="#home" class="transition-colors hover:text-orange">Home</a>
    </li>
    <li>
      <a href="#projects" class="transition-colors hover:text-orange"
        >Projects</a
      >
    </li>
    <li>
      <a href="#skills" class="transition-colors hover:text-orange">Skills</a>
    </li>
    <li>
      <a href="#contact" class="transition-colors hover:text-orange">Contact</a>
    </li>
  </ul>
</nav>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const links = document.querySelectorAll("nav a");

    links.forEach((link) => {
      link.addEventListener("click", smoothScroll);
    });

    function smoothScroll(e) {
      e.preventDefault();

      const targetId = e.target.getAttribute("href")?.substring(1);
      const targetElement = document.getElementById(targetId);

      if (targetElement) {
        window.scrollTo({
          top:
            targetElement.offsetTop -
            document.querySelector("nav").offsetHeight,
          behavior: "smooth",
        });
      }
    }
  });
</script>
